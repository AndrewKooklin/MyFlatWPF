<UserControl x:Class="MyFlatWPF.View.ManagementView.OrdersByPeriodView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyFlatWPF.View.ManagementView"
             xmlns:viewModel="clr-namespace:MyFlatWPF.ViewModel.Management"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="500">
    <Grid>

        <Grid.Resources>

            <viewModel:OrdersByPeriodViewModel x:Key="OrdersByPeriodViewModel"/>

            <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Height" Value="30"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="3 0 0 0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="3"
                                    BorderThickness="1"
                                    BorderBrush="Black"
                                    Background="DeepSkyBlue">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ButtonByPeriodStyle" TargetType="{x:Type Button}">
                <Setter Property="Height" Value="30"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="3 0 0 0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="3 0 0 3"
                                    BorderThickness="1 1 0 1"
                                    BorderBrush="Black"
                                    Background="DeepSkyBlue">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DatePickerStyle" TargetType="{x:Type DatePicker}">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Width" Value="105"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="DeepSkyBlue"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Margin" Value="0 0 0 0"/>
                <Setter Property="BorderBrush" Value="Black"/>
            </Style>

        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="140*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="spHeaders"
                    Grid.Row="0"
                    Margin="25 20 0 10"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">

            <TextBlock x:Name="tbHeader"
                   Text="Orders by :"
                   FontSize="24"
                   HorizontalAlignment="Left">
            </TextBlock>

            <TextBlock x:Name="tbHeaderPeriod"
                   Text="{Binding PeriodName, 
                          Source={StaticResource OrdersByPeriodViewModel},
                          UpdateSourceTrigger=PropertyChanged}"
                   FontSize="24"
                   Margin="5 0 0 0"
                   HorizontalAlignment="Left">
            </TextBlock>

        </StackPanel>

        <TextBlock x:Name="tbErrorPeriod"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="{Binding ErrorPeriod, 
                          Source={StaticResource OrdersByPeriodViewModel},
                          UpdateSourceTrigger=PropertyChanged}"
                   FontSize="12"
                   Foreground="Red"
                   Margin="0 0 30 0"
                   HorizontalAlignment="Right">
        </TextBlock>

        <StackPanel x:Name="spOrdersByPeriod"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="5 0 0 0">

            <Button x:Name="btnToday"
                Width="55"
                Content="Today"
                Margin="20 0 0 0"
                ToolTip="Orders for Today"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding ShowOrdersByPeriodCommand, 
                Source={StaticResource OrdersByPeriodViewModel}}"
                CommandParameter="{Binding Name, ElementName=btnToday}">
            </Button>

            <Button x:Name="btnYesterday"
                Width="70"
                Content="Yesterday"
                ToolTip="Orders for Yesterday"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding ShowOrdersByPeriodCommand, 
                Source={StaticResource OrdersByPeriodViewModel}}"
                CommandParameter="{Binding Name, ElementName=btnYesterday}">
            </Button>

            <Button x:Name="btnWeek"
                Width="50"
                Content="Week"
                ToolTip="Orders for Week"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding ShowOrdersByPeriodCommand, 
                Source={StaticResource OrdersByPeriodViewModel}}"
                CommandParameter="{Binding Name, ElementName=btnWeek}">
            </Button>

            <Button x:Name="btnMonth"
                Width="55"
                Content="Month"
                ToolTip="Orders for Month"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding ShowOrdersByPeriodCommand, 
                Source={StaticResource OrdersByPeriodViewModel}}"
                CommandParameter="{Binding Name, ElementName=btnMonth}">
            </Button>

            <Button x:Name="btnPeriod"
                Width="80"
                Content="Period from"
                ToolTip="Orders by Period"
                Style="{StaticResource ButtonByPeriodStyle}"
                Command="{Binding ShowOrdersByPeriodCommand, Source={StaticResource OrdersByPeriodViewModel}}"
                CommandParameter="{Binding Name, ElementName=btnPeriod}">
            </Button>

            <DatePicker x:Name="dpDateFrom" 
                        xml:lang="en-US" 
                        Text="{Binding DateFrom,
                               Source={StaticResource OrdersByPeriodViewModel}}"
                        Style="{StaticResource DatePickerStyle}"
                        ToolTip="Date from"
                        BorderThickness="0 1 0 1"
                        FirstDayOfWeek="Monday"
                        Padding="0 5 0 5">
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="IsReadOnly" Value="True"/>
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Control.Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <TextBox x:Name="TextBoxFrom"
                                             Text="{Binding Path=SelectedDate, 
                                                    StringFormat='dd.MM.yyyy', 
                                                    RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}"
                                             Padding="5 0 0 0"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>

            <Border Height="30"
                       Width="20"
                       HorizontalAlignment="Left"
                       Background="DeepSkyBlue"
                       BorderBrush="Black"
                       BorderThickness="0 1 0 1"
                       VerticalAlignment="Center">
                <TextBlock Text="to"
                           Width="20"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Padding="4 0 0 0"
                           VerticalAlignment="Center">
                </TextBlock>
            </Border>

            <DatePicker x:Name="dpDateTo" 
                        xml:lang="en-US"
                        Text="{Binding DateTo,
                               Source={StaticResource OrdersByPeriodViewModel}}"
                        Style="{StaticResource DatePickerStyle}"
                        ToolTip="Date to"
                        BorderThickness="0 1 0 1"
                        FirstDayOfWeek="Monday"
                        Padding="0 5 0 5">
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="IsReadOnly" Value="True"/>
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Control.Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <TextBox x:Name="TextBoxTo"
                                             Text="{Binding Path=SelectedDate, 
                                                    StringFormat='dd.MM.yyyy', 
                                                    RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}"
                                             Padding="5 0 0 0"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>

            <Border Height="30"
                       Width="5"
                       HorizontalAlignment="Left"
                       Background="DeepSkyBlue"
                       BorderBrush="Black"
                       BorderThickness="0 1 1 1"
                       CornerRadius="0 3 3 0">
            </Border>

        </StackPanel>

        <StackPanel x:Name="spCount"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="25 10 0 0"
                    Orientation="Horizontal">

            <TextBlock x:Name="tbOrdersCountText"
                   Text="Orders Count : "
                   FontSize="20"
                   VerticalAlignment="Center">
            </TextBlock>

            <TextBlock x:Name="tbOrdersCount"
                   Text="{Binding OrdersCount, 
            Source={StaticResource OrdersByPeriodViewModel},
            UpdateSourceTrigger=PropertyChanged}"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left">
            </TextBlock>
        </StackPanel>

        <DataGrid x:Name="dgOrders"
                  Grid.Row="4"
                  Grid.ColumnSpan="2"
                  Width="600"
                  Height="450"
                  Padding="10 0 10 20"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  BorderThickness="0 1 0 0"
                  HorizontalAlignment="Center"
                  HorizontalContentAlignment="Center"
                  VerticalScrollBarVisibility="Auto"
                  CanUserAddRows="false" 
                  LoadingRow="DataGrid_LoadingRow"
                  ItemsSource="{Binding Orders, 
            Source={StaticResource OrdersByPeriodViewModel},
            UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False"
                  Margin="0 10 0 20">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Id"
                                Width="20"
                                IsReadOnly="True"
                                Binding="{Binding Id,
                                            UpdateSourceTrigger=PropertyChanged}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0.8 0 0 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="1 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Date Create" 
                                Width="75"
                                IsReadOnly="True"
                                Binding="{Binding DateCreate,
                                StringFormat=dd.MM.yyyy HH:mm:ss,
                                Mode=OneWay}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Name"
                                    Width="60"
                                    IsReadOnly="True"
                                    Binding="{Binding Name}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Email"
                                    Width="80"
                                    IsReadOnly="True"
                                Binding="{Binding Email}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Mobile"
                                    IsReadOnly="True"
                                Binding="{Binding Mobile}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Message"
                                Width="80"
                                FontSize="8"
                                    IsReadOnly="True"
                                Binding="{Binding Message}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Service Name"
                                    Width="*"
                                    FontSize="10"
                                    IsReadOnly="True"
                                    Binding="{Binding ServiceName}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn x:Name="dgComboBox"
                                        Header="Status Name (changeable)"
                                        Width="90">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" 
                                                   Text="{Binding}"
                                                   FontSize="12">
                                        </TextBlock>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox x:Name="cbStatus"
                                      BorderBrush="Transparent"
                                      BorderThickness="0 0 0 0"
                                ItemsSource="{Binding StatusNames, 
                                Source={StaticResource OrdersByPeriodViewModel}}"
                              SelectedItem="{Binding StatusName}"
                                      SelectionChanged="Cb_SelectionChanged"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
