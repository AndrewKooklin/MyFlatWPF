<UserControl x:Class="MyFlatWPF.View.ManagementView.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyFlatWPF.View.ManagementView"
             xmlns:viewModel="clr-namespace:MyFlatWPF.Commands.ManagementCommand"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="500">
    <Grid>

        <Grid.Resources>

            <viewModel:ShowOrdersByServiceNameCommand x:Key="ShowOrdersByServiceNameCommand"/>

            <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="3"
                                    BorderThickness="1"
                                    BorderBrush="Black"
                                    Background="DeepSkyBlue">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </Grid.Resources>
        

        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="140*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="tbHeader"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text=""
                   FontSize="24"
                   Margin="20 20 0 20">
            
        </TextBlock>

        <TextBlock x:Name="tbOrdersCount"
                   Grid.Row="1"
                   Grid.Column="0"
                   Text=""
                   FontSize="20"
                   Margin="20 0 0 10">

        </TextBlock>

        <Button x:Name="btnBackToBlog"
                Grid.Row="1"
                Grid.Column="1"
                Width="80"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 0 15 10"
                Content="Back"
                ToolTip="To Orders By Service"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding BackToOrdersByService, 
                          Source={StaticResource ShowOrdersByServiceNameCommand}}">

        </Button>

        <DataGrid x:Name="dgOrders"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Width="600"
                  Height="450"
                  Padding="10 0 10 20"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  BorderThickness="0 1 0 0"
                  HorizontalAlignment="Center"
                  HorizontalContentAlignment="Center"
                  VerticalScrollBarVisibility="Auto"
                  CanUserAddRows="false" 
                  LoadingRow="DataGrid_LoadingRow"
                  ItemsSource="{Binding Orders, 
            Source={StaticResource ShowOrdersByServiceNameCommand},
            UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False"
                  Margin="0 10 0 20">
            <DataGrid.Columns>
                
            <DataGridTextColumn Header="Id"
                                Width="20"
                                IsReadOnly="True"
                                Binding="{Binding Id,
                                            UpdateSourceTrigger=PropertyChanged}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="0.8 0 0 0" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="1 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
            <DataGridTextColumn Header="Date Create" 
                                Width="75"
                                IsReadOnly="True"
                                Binding="{Binding DateCreate,
                                StringFormat=dd.MM.yyyy HH:mm:ss,
                                Mode=OneWay}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Name"
                                    Width="60"
                                    IsReadOnly="True"
                                    Binding="{Binding Name}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Email"
                                    Width="80"
                                    IsReadOnly="True"
                                Binding="{Binding Email}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Mobile"
                                    IsReadOnly="True"
                                Binding="{Binding Mobile}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Message"
                                Width="80"
                                FontSize="8"
                                    IsReadOnly="True"
                                Binding="{Binding Message}">
                    <DataGridTextColumn.HeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Service Name"
                                    Width="*"
                                    FontSize="10"
                                    IsReadOnly="True"
                                    Binding="{Binding ServiceName}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
                            <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn x:Name="dgComboBox"
                                        Header="Status Name (changeable)"
                                        Width="90">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0 1 1 1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" 
                                                   Text="{Binding}"
                                                   FontSize="12">
                                        </TextBlock>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox x:Name="cbStatus"
                                      BorderBrush="Transparent"
                                      BorderThickness="0 0 0 0"
                                ItemsSource="{Binding StatusNames, 
                                Source={StaticResource ShowOrdersByServiceNameCommand}}"
                              SelectedItem="{Binding StatusName}"
                                      SelectionChanged="Cb_SelectionChanged"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
